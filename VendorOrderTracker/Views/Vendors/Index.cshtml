@using VendorOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Your Vendors List</h1>
<br>
@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet.  Get to work Pierre!</h3>
}

@foreach (Vendor vendor in Model)
{
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}
<br>
<br>
<a href='/vendors/new' class="btn-primary">Add A New Vendor</a>
