@using VendorOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h3>Here are all the orders for @Model["vendor"].Name</h3>
<br>
<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>This thing</a></li>
  }
</ol>
<br>
<br>
<a href='/vendors/@Model["vendor"].Id/orders/new' class="btn-primary">Add a new order for @Model["vendor"].Name</a>
<br>
<br>
<a href='/vendors' class="btn-success">Return to vendor list</a>
<br>
<br>
<a href='/' class="btn-success">Return to Main Page</a>